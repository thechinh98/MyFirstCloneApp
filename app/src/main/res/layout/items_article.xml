<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical"
	android:background="#fff"
android:layout_marginBottom="15dp"
android:layout_marginLeft="15dp"
android:layout_marginRight="15dp">

   <ImageView
	  android:layout_width="match_parent"
	  android:layout_height="247dp" app:srcCompat="@mipmap/news_image1" android:id="@+id/img_article_item"
	  android:scaleType="fitXY"
	  app:layout_constraintEnd_toEndOf="parent"/>
   <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical"
				 android:paddingLeft="19dp" android:paddingRight="11dp">
	  <TextView
		 android:layout_width="wrap_content" android:layout_height="wrap_content"
		 android:text="Quick Brown For Jumps Over"
		 android:textSize="18sp"
		 android:textColor="#030303"
		 android:layout_marginTop="14dp" app:layout_constraintStart_toStartOf="parent"
		 android:id="@+id/txt_item_article_title"/>
	  <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
		 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
				   android:text="TRAVELLING" android:textColor="#b8e986"
				   android:layout_marginTop="7dp"
				   android:textSize="12sp" android:id="@+id/txt_item_article_status"/>
		 <TextView
			android:text="16 MAY 2016"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/txt_item_article_date"
			android:layout_marginLeft="15dp"
			android:layout_toRightOf="@+id/txt_item_article_status"
			android:layout_alignBottom="@+id/txt_item_article_status"/>
	  </RelativeLayout>
	  <TextView
		 android:text="Synth polaroid bitters chillwave pickled. Vegan disrupt tousled, Portland keffiyeh aesthetic food"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content" android:id="@+id/txt_item_article_content"
		 android:layout_marginEnd="41dp" android:layout_marginRight="41dp"
		 app:layout_constraintTop_toBottomOf="@+id/txt_item_article_status" android:layout_marginTop="7dp"/>
	  <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
				 tools:layout_editor_absoluteX="-16dp"
				 app:layout_constraintTop_toBottomOf="@+id/txt_item_article_content"
				 android:src="@drawable/line_item_artile" android:layout_marginTop="22dp" android:id="@+id/imageView7"/>
	  <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
	  android:layout_marginBottom="20dp">
	  <TextView
		 android:text="14 COMMENTS"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content" android:id="@+id/txt_comments"
		 android:layout_marginTop="16dp" />
	  <TextView
		 android:text="254 LIKES"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content" android:id="@+id/txt_likes"
		 android:layout_marginEnd="11dp" android:layout_marginRight="11dp" android:layout_marginTop="16dp"
	  android:layout_alignParentRight="true"/>
	  </RelativeLayout>
   </LinearLayout>
</LinearLayout>