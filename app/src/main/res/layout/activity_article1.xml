<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".ActivityArticle1"
   android:background="@mipmap/img_copy" android:id="@+id/txt_date">
   <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:src="@mipmap/hamburger_menu_white"
			  android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
			  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="11dp"
			  android:layout_marginStart="11dp" android:id="@+id/imageView3"/>
   <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			 android:text="Most Popular"
			 android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
			 app:layout_constraintHorizontal_bias="0.5"
			 app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			 app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:textSize="17sp"
			 android:textColor="#FFFFFF" android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/imageView3"
			 android:id="@+id/textView"/>
   <ImageView
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" app:srcCompat="@mipmap/harriet_welsch_copy" android:id="@+id/img_ava"
	  app:layout_constraintStart_toStartOf="parent"
	  android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="231dp"
	  app:layout_constraintTop_toTopOf="parent"/>
   <TextView
	  android:text="Harriet Welsch"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" android:id="@+id/txt_name"
	  app:layout_constraintStart_toEndOf="@+id/img_ava" android:layout_marginLeft="12dp"
	  android:layout_marginStart="12dp" app:layout_constraintTop_toTopOf="@+id/img_ava"
	  android:textSize="12sp" android:textColor="#FFFFFF"
	  android:letterSpacing="-0.02" app:layout_constraintBottom_toBottomOf="@+id/img_ava"/>
   <TextView
	  android:layout_width="95dp"
	  android:layout_height="23dp" android:id="@+id/txt_address"
	  app:layout_constraintTop_toBottomOf="@+id/txt_name"
	  tools:text="San Francissco, CA" android:textColor="#C7C7CD" android:textSize="12sp"
	  app:layout_constraintStart_toStartOf="@+id/txt_name"/>
   <TextView
	  android:text="Tousled food truck polaroid salvia"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" android:id="@+id/txt_news_title"
	  app:layout_constraintTop_toBottomOf="@+id/img_ava"
	  android:layout_marginTop="11dp" app:layout_constraintStart_toStartOf="@+id/img_ava"
	  android:textColor="#FFFFFF" android:letterSpacing="-0.09"
	  android:textSize="36sp" android:lineSpacingExtra="12sp"/>
   <TextView
	  android:text="Travelling"
	  android:layout_width="wrap_content"
	  android:layout_height="16dp" android:id="@+id/txt_status"
	  app:layout_constraintTop_toBottomOf="@+id/txt_news_title"
	  app:layout_constraintStart_toStartOf="@+id/txt_news_title"
	  android:textColor="#B8E986" android:textStyle="bold" android:textSize="12sp"
   />
   <TextView
	  android:text="16 MAY 12016"
	  android:layout_width="wrap_content"
	  android:layout_height="0dp"
	  app:layout_constraintTop_toTopOf="@+id/txt_status"
	  android:textColor="#C7C7CD" android:textSize="12sp"
	  android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
	  app:layout_constraintStart_toEndOf="@+id/txt_status"/>
   <TextView
	  android:text="@string/newsContent"
	  android:layout_width="0dp"
	  android:layout_height="wrap_content" android:id="@+id/textView6"
	  app:layout_constraintStart_toStartOf="@+id/txt_news_title"
	  android:textColor="#FFFFFF" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="55dp"
	  android:layout_marginRight="55dp" android:layout_marginTop="44dp"
	  app:layout_constraintTop_toBottomOf="@+id/txt_news_title" app:lineHeight="21sp"/>
   <Button
	  android:text="READ ARTICLE"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" android:id="@+id/button"
	  app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
	  app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="21dp"
	  app:layout_constraintBottom_toBottomOf="parent"
	  android:background="@drawable/ic_read_article_silver_bar"
	  android:drawableRight="@drawable/ic_arrow_thin_right"
	  android:drawablePadding="15dp"
	  android:paddingTop="15dp"
	  android:paddingBottom="15dp"
	  android:paddingLeft="47dp"
	  android:paddingRight="47dp"
   />
   <ImageView
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" app:srcCompat="@mipmap/dots_3" android:id="@+id/ic_dot_3"
	  app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="26dp" android:layout_marginEnd="26dp"
	  app:layout_constraintBottom_toBottomOf="@+id/button"
	  app:layout_constraintTop_toTopOf="@+id/button"/>
   <TextView
	  android:text="14 COMMENTS"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" android:id="@+id/txt_comments"
	  app:layout_constraintBottom_toBottomOf="@+id/button"
	  android:textColor="#C7C7CD" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="22dp"
	  android:layout_marginStart="22dp" app:layout_constraintEnd_toStartOf="@+id/button" android:layout_marginEnd="21dp"
	  android:layout_marginRight="21dp" app:layout_constraintTop_toTopOf="@+id/button" android:textSize="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>