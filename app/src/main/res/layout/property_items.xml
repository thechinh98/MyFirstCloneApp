<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_marginTop="15dp"
   android:background="#14000000"
   android:padding="10dp"
   tools:context=".ItemsProperty">
   <ImageView android:id="@+id/newsImage"
			  android:layout_width="80dp" android:layout_height="80dp"
			  android:src="@drawable/ic_filter"/>
   <TextView android:id="@+id/newsTitle"
			 android:layout_width="wrap_content" android:layout_height="wrap_content"
			 android:layout_toRightOf="@+id/newsImage"
			 android:textSize="16sp"
			 android:layout_alignTop="@+id/newsImage"
			 android:layout_marginLeft="10dp"
			 android:text="Ba xi lo bla xi lo"/>
   <CheckBox android:id="@+id/ic_star"
			 android:layout_width="wrap_content" android:layout_height="wrap_content"
			 android:background="@drawable/star_icon"
			 android:button="@null"
			 android:layout_toRightOf="@+id/newsImage"
			 android:layout_alignBottom="@+id/newsImage"/>
   <CheckBox android:id="@+id/ic_heart"
			 android:layout_width="wrap_content" android:layout_height="wrap_content"
			 android:background="@drawable/heart_icon"
			 android:button="@null"
			 android:layout_toRightOf="@+id/ic_star"
			 android:layout_alignBottom="@+id/ic_star"
			 android:layout_marginLeft="17dp"/>
   <ImageView android:id="@+id/ic_share"
			  android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:src="@drawable/ic_share"
			  android:layout_toRightOf="@+id/ic_heart"
			  android:layout_alignBottom="@+id/ic_heart"
			  android:layout_marginLeft="17dp"
   />
   <TextView android:id="@+id/createTime"
			 android:layout_width="wrap_content" android:layout_height="wrap_content"
			 android:layout_alignParentRight="true"
			 android:layout_alignBottom="@+id/ic_share"
			 android:text="2 hour ago"/>
   <TextView android:layout_width="0dp" android:layout_height="0dp"
			 android:id="@+id/newsContent"
			 android:text=""
   />
   <ImageView android:layout_width="0dp" android:layout_height="0dp"
			  android:id="@+id/mainImage"
   />


</RelativeLayout>