<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="165dp"
			  android:layout_height="165dp">
   <ImageView android:id="@+id/img_prop"
			  android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:layout_marginTop="25dp"
			  android:layout_gravity="center_horizontal"/>
   <TextView android:id="@+id/txt_name"
			 android:layout_width="wrap_content" android:layout_height="wrap_content"
			 android:layout_gravity="center_horizontal"
			 android:layout_marginTop="23dp" android:textSize="20sp" android:lineSpacingExtra="0.29sp"
			 android:textColor="#253858"/>
   <TextView android:id="@+id/txt_quantity"
			 android:layout_width="wrap_content" android:layout_height="wrap_content"
			 android:layout_gravity="center_horizontal" android:lineSpacingExtra="0.21sp" android:textColor="#253858"/>

</LinearLayout>