<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".ActivityArticle2">

   <ImageView
	  android:layout_width="411dp"
	  android:layout_height="363dp" app:srcCompat="@mipmap/news_image" android:id="@+id/img_news_1"
	  app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
	  app:layout_constraintEnd_toEndOf="parent"
	  app:layout_constraintHorizontal_bias="0.0"/>
   <ImageView
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" app:srcCompat="@mipmap/harriet_welsch_copy" android:id="@+id/imageView5"
	  app:layout_constraintStart_toStartOf="parent"
	  android:layout_marginLeft="22dp" android:layout_marginStart="22dp" android:layout_marginBottom="8dp"
	  app:layout_constraintBottom_toBottomOf="@+id/img_news_1" app:layout_constraintTop_toBottomOf="@+id/img_news_1"/>
   <TextView
	  android:text="Quick Brown Fox Jumps Over"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" android:id="@+id/txt_news_title_1"
	  app:layout_constraintStart_toStartOf="@+id/imageView5"
	  app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginTop="16dp"
	  android:textColor="#030303" android:textSize="18sp"/>
   <TextView
	  android:text="TRAVELLING"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" android:id="@+id/txt_news_status"
	  app:layout_constraintStart_toStartOf="@+id/txt_news_title_1"
	  app:layout_constraintTop_toBottomOf="@+id/txt_news_title_1" android:layout_marginTop="7dp"
	  android:textSize="12sp" android:textColor="#B8E986"/>
   <TextView
	  android:text="16 MAY 2016"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" android:id="@+id/txt_news_date"
	  app:layout_constraintBottom_toBottomOf="@+id/txt_news_status"
	  app:layout_constraintTop_toTopOf="@+id/txt_news_status" app:layout_constraintStart_toEndOf="@+id/txt_news_status"
	  android:textColor="#C7C7CD" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
	  app:layout_constraintVertical_bias="0.0"/>
   <TextView
	  android:text="@string/newsContent"
	  android:layout_width="0dp"
	  android:layout_height="186dp" android:id="@+id/txt_news_content"
	  app:layout_constraintStart_toStartOf="@+id/imageView5"
	  android:layout_marginTop="35dp" app:layout_constraintTop_toTopOf="@+id/txt_news_date"
	  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="53dp" android:layout_marginRight="53dp"
	  android:lineHeight="22sp"
   />
   <TextView
	  android:text="@string/_14_comment"
	  android:layout_height="11dp" android:id="@+id/txt_comments"
	  app:layout_constraintStart_toStartOf="@+id/txt_news_title_1"
	  app:layout_constraintEnd_toStartOf="@+id/btn_read_article"
	  android:layout_marginEnd="21dp" android:layout_marginRight="21dp"
	  app:layout_constraintBottom_toBottomOf="@+id/btn_read_article"
	  app:layout_constraintTop_toTopOf="@+id/btn_read_article" app:layout_constraintHorizontal_bias="0.5"
	  app:layout_constraintVertical_bias="0.52" android:textSize="10sp" android:layout_width="wrap_content"/>
   <Button
	  android:text="READ ARTICLE"
	  android:layout_width="202dp"
	  android:textSize="12sp"
	  android:layout_height="wrap_content" android:id="@+id/btn_read_article" android:textColor="#FFFFFF"
	  android:background="@drawable/ic_read_article_black_bar"
	  android:drawableRight="@mipmap/arrow_thin_right_white" android:layout_marginBottom="8dp"
	  android:paddingRight="48dp" android:paddingLeft="48dp"
	  android:paddingTop="15dp" android:paddingBottom="15dp"
	  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
	  app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
   <ImageView
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content" app:srcCompat="@mipmap/dots_3" android:id="@+id/imageView6"
	  app:layout_constraintTop_toTopOf="@+id/btn_read_article"
	  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/btn_read_article"
	  app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="26dp"
	  android:layout_marginEnd="26dp" app:layout_constraintStart_toEndOf="@+id/btn_read_article"
	  android:layout_marginLeft="35dp" android:layout_marginStart="35dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>